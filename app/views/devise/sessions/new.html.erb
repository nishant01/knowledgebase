<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),:class => "form-horizontal") do |f| %>
    <div class = "form-group">
        <%= f.label :email, :class => "col-sm-2 control-label" %><br />
        <%= f.email_field :email, autofocus: true, :class => "form-control" %>
    </div>

    <div class = "form-group">
        <%= f.label :password, :class => "col-sm-2 control-label" %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class = "form-group"><%= f.check_box :remember_me, :class => "checkbox" %> <%= f.label :remember_me, :class => "col-sm-2 control-label" %></div>
    <% end -%>

    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign in", :class => "btn btn-default" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
