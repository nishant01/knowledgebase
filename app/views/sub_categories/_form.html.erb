<%=form_for @sub_category do |f|%>
    <%if @sub_category.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@sub_category.errors.count, "error") %> prohibited this category from being saved:</h2>

            <ul>
            <% @sub_category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    <%end%>

    <%=f.label :title%>
    <%= f.text_field :title%>

    <%=f.label :description%>
    <%=f.text_area :description%>

    <%=f.label :status%>
    <%=f.check_box :is_live%>

    <%= f.label :category %>
    <%= f.collection_select(:category_id, Category.all, :id, :title) %>

    <%= f.label :sub_category %>
